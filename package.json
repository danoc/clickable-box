{
  "name": "clickable-box",
  "description": "Add `onClick` to HTML elements without sacrificing accessibility.",
  "version": "1.0.0",
  "author": "Daniel O'Connor <daniel@danoc.me>",
  "license": "MIT",
  "main": "./dist/clickable-box.js",
  "umd:main": "./dist/clickable-box.umd.js",
  "module": "./dist/clickable-box.mjs",
  "source": "./src/index.tsx",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run test:eslint && npm run test:jest && npm run test:prettier",
    "test:eslint": "eslint . --ignore-path .gitignore --ext .jsx --ext .js --ext .tsx --ext .ts",
    "test:jest": "jest --coverage",
    "test:prettier": "prettier \"**/*.{js,jsx,ts,tsx,css,scss,json,md,mdx,html}\" --list-different",
    "prepublishOnly": "microbundle --globals react=React",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,css,scss,json,md,mdx,html}\" --write",
    "release": "np"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/react": "^8.0.1",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.20",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.4",
    "codecov": "^3.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^2.4.1",
    "jest": "^24.0.0",
    "microbundle": "^0.11.0",
    "np": "^5.0.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danoc/clickable-box.git"
  },
  "bugs": {
    "url": "https://github.com/danoc/clickable-box/issues"
  },
  "keywords": [
    "accessibility",
    "react",
    "component"
  ],
  "homepage": "https://github.com/danoc/clickable-box#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
